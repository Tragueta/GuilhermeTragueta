@model Guilherme_Tragueta.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Viewing details of a CATEGORY";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Viewing details of a CATEGORY
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alter", "Edit", new { id = Model.CategoryId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Return to Categories list", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>
@Html.Partial("~/Views/Products/_PorCategory.cshtml", Model.Products.ToList())

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liCategories').addClass("active");
        });
    </script>
}