@model Guilherme_Tragueta.Models.Supplier
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Viewing details of a SUPPLIER";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Viewing details of a SUPPLIER
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Name,new {htmlAttributes = new { @class = "form-control", disabled = "disabled"}})
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alter", "Edit", new { id =Model.SupplierId }, new { @class ="btn btn-info"})
        @Html.ActionLink("Return to supplier listening","Index", null, new { @class ="btn btn-info"})
    </div>
</div>
@Html.Partial("~/Views/Products/_PorSupplier.cshtml", Model.Products.ToList())

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liSuppliers').addClass("active");
        });
    </script>
}